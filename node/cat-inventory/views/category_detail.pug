extends layout

block content
  
  .wrapper
    h1= title

    .catGrid
      each cat in categoryCats
        .catCard
          .catPic= cat.pic
          .catName= cat.name
          .catDescription= cat.description
          .catStock Stock: #[=cat.stock]
          .catCategoryContainer
            each category in cat.category
              .catCategory
                a(href=category.url) #[=category.name]
          a.title(href=cat.url) Details

        .categoryBottom
          p You must delete all category cats before deleting the category
          .categoryDetailButtons
            form(method="post" action=category._id + "/delete")
              input(type="hidden" name="categoryid" value=category._id)
              button.delete delete
            a(href=category._id + "/update")
              button.update update